# Aliases adapted from
# https://github.com/japacible/config
# https://github.com/zachlatta/dotfiles
# http://zanshin.net/2013/02/02/zsh-configuration-from-the-ground-up/
# https://github.com/myfreeweb/zshuery/blob/master/zshuery.sh
# https://github.com/ZucchiniZe/dotfiles

# alias aliases
alias ae="$EDITOR ~/.aliases"
alias ar='. ~/.aliases'

# movement aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'

alias z='z.sh'

# git aliases
alias g='git'
alias ga='git add'
alias gb='git branch -v'
alias gc='git commit'
alias gco='git checkout -b'
alias gd='git diff'
alias gdc='git diff --cached'
alias gl='git log'
alias gpull='git pull'
alias gpush='git push'
alias gr='git remote -v'
alias gs='git status'

# directory aliases - use GNU coreutils with solarized colors
if command -v gls >/dev/null 2>&1; then
  alias ls='gls --color=auto'
  alias l='gls -CF --color=auto'
  alias la='gls -a --color=auto'
  alias ll='gls -alF --color=auto'
else
  alias ls='ls -G'
  alias l='ls -CFG'
  alias la='ls -aG'
  alias ll='ls -alFG'
fi
alias mkdir='mkdir -p'

# terminal aliases
alias quit='exit'
alias :q='exit'
alias :e='e'

# remotes aliases
alias forest='mosh msw@forest'
alias bamboo='ssh pi@bamboo'

gclone() {
  git clone $1 && cd $(basename $1 | sed -e 's/\.git//')
}

alias yt-mp3='yt-dlp --extract-audio --audio-format mp3'
